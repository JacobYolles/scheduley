{{!-- Customer side --}}


<div class="container">
  <div class="card">
    <div class="card-header">
      Scheduling!
    </div>
    <div class="card-body">
      <h5 class="card-title cardHead">Please pick the service you are interested in.</h5>
      <p class="card-text">Services:</p>
      <ul id="hair-list" class="list-group">
        {{#each hair}}
        <li data-id="{{this.id}}" class="list-group-item">
          <a href="hair/{{this.id}}"><span class = "linkSpace">{{this.service_provided}}:</span></a>  
          <a href="hair/{{this.id}}"><span class = "linkDaySpace">{{this.days_provided}}</span></a>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
  
   
    


